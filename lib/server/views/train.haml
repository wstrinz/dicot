%head
  %script{src: 'jquery.js', type: 'text/javascript'}
  %script{src: 'underscore.js', type: 'text/javascript'}
  %script{src: 'train.js', type: 'text/javascript'}
  %link{:rel => :stylesheet, :type => :"text/css", :href => "train.css"}
%body
  %h1 Train

  .content-area
    .column-arrangement
      .train-input
        %textarea{id: 'training_input', cols: 60, rows: 4} Where's Somebody (Friday Morning)
        #selected
          Selected:
        .train-label
          %textarea{id: 'training_label', cols: 60} Label
          %br
          %button{id: 'submit_training', onClick: "addTraining()"} Add
        #output
          Labels:
        .submit-training
          %button{id: 'submit', onClick: 'submitTraining()'} Submit

      .feedback-controls
        #feedback-count
          1/1
        .feedback-next-prev
          %button{id: 'next-feedback', onClick: "nextFeedback()"} Next
          %button{id: 'prev-feedback', onClick: "prevFeedback()"} Prev
        %br
        .feedback-skip-confirm
          %button{id: 'skip-feedback', onClick: "skipFeedback()"} Skip
          %button{id: 'confirm-feedback', onClick: "confirmFeedback()"} Confirm

      .feedback-display
        #feedback-display-string
          String
        #feedback-display-labels
          Labels:
          #feedback-display-labels-content
            TEST
